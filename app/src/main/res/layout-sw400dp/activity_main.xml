<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:background="@drawable/main_custom_toolbar"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/toolbar2"/>
    <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/bottomNavigationView"
            android:layout_marginBottom="12dp" android:layout_marginTop="11dp" android:layout_below="@+id/toolbar2"/>
    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/menu"
            app:itemIconTint="#42d4f5"
            app:itemTextColor="@android:color/secondary_text_light" android:background="#F6FAF9"/>
    <TextView
            android:text="Lets chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView9" android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp" android:textColor="#FFFFFF" android:textSize="24sp"
            android:textStyle="bold"/>
</RelativeLayout>