<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.createroom_activity" android:background="@drawable/cr">

    <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.398" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.625"
            app:cardCornerRadius="20dp" android:id="@+id/cardView6" app:cardBackgroundColor="#FDFDFD">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="CREATE ROOM"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" android:id="@+id/textView6" android:gravity="center"
                    android:textSize="24sp" android:layout_marginTop="20dp" android:textStyle="bold"
                    android:background="@drawable/create_room_back" android:textColor="#FFFFFF" android:padding="5dp"
                    android:layout_marginLeft="5dp" android:layout_marginRight="5dp"/>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="327dp"
                    android:layout_height="66dp"
                    android:ems="10"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:background="#FFFFFF" android:layout_marginTop="20dp" android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp" app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp">
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textPersonName"

                        android:id="@+id/code"
                        android:fontFamily="sans-serif" android:textStyle="bold" android:hint="Room ID"
                        android:paddingLeft="5dp" android:background="#EDEAEA"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_marginTop="30dp" android:paddingLeft="10dp"
                    android:layout_marginBottom="10dp">
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" android:id="@+id/create_btn"
                        android:text="Create" android:padding="2dp" android:paddingLeft="10dp"
                        android:layout_marginLeft="10dp"/>
                <Button
                        android:text="Share"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" android:id="@+id/share_btn"
                        android:padding="2dp" android:layout_marginLeft="80dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>