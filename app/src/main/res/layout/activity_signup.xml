<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.SignupActivity" android:background="#F6F5F5" app:barrierMargin="10dp">


    <View
            android:layout_width="408dp"
            android:layout_height="131dp" android:id="@+id/view" android:layout_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:background="@drawable/ic_sd"/>
    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            android:layout_marginRight="16dp" android:layout_marginEnd="16dp" android:background="@drawable/card"
            app:cardCornerRadius="10dp" app:layout_constraintHorizontal_bias="0.454" android:id="@+id/cardView5">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:dividerPadding="10dp" android:padding="20dp">
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Name"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" android:id="@+id/name_layout"
                    android:background="#FFFFFF">
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"

                        android:id="@+id/Name" android:background="#F6F5F5"
                        android:fontFamily="sans-serif" android:textStyle="bold"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Email"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginTop="10dp" android:id="@+id/email_layout" android:background="#FFFFFF">
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"

                        android:id="@+id/Email" android:background="#F6F5F5" android:layout_marginTop="20dp"
                        android:textStyle="bold"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Mobile Number"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" android:dividerPadding="10dp"
                    android:layout_marginTop="10dp" android:id="@+id/mobile_layout" android:background="#FFFFFF">
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"

                        android:id="@+id/mobile" android:background="#F6F5F5" android:textStyle="bold"/>
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                    android:text="Register"
                    android:layout_width="146dp"
                    android:layout_height="62dp" android:id="@+id/button" android:gravity="center"
                    android:padding="10dp" android:layout_margin="10dp"
                    android:layout_marginTop="10dp" android:layout_marginLeft="20dp" android:textStyle="bold"/>
            <TextView
                    android:text="Login With Phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/logphone" android:textSize="18sp"
                    android:textColor="#283593" android:layout_marginTop="20dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
            android:text="Register"
            android:layout_width="213dp"
            android:layout_height="60dp" android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/view" app:layout_constraintBottom_toTopOf="@+id/cardView5"
            app:layout_constraintHorizontal_bias="0.67" android:textSize="36sp" android:textColor="#3A3381"
            android:fontFamily="sans-serif-condensed-medium" android:layout_marginBottom="8dp"/>
    <View
            android:layout_width="0dp"
            android:layout_height="115dp" android:id="@+id/view2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/ic_sd"/>
</androidx.constraintlayout.widget.ConstraintLayout>