<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context="com.example.letschat.Activities.splash_screen">


    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/progressBar3"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintTop_toBottomOf="@+id/imageView5"
            android:layout_marginTop="208dp"/>
    <ImageView
            android:layout_width="146dp"
            android:layout_height="133dp" app:srcCompat="@drawable/chatss" android:id="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.406"/>
    <TextView
            android:text="Let's chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            android:layout_marginEnd="179dp" android:layout_marginRight="179dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="171dp" android:layout_marginStart="171dp" android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" android:layout_marginBottom="178dp"
            app:layout_constraintBottom_toTopOf="@+id/progressBar3" android:textStyle="bold"
            android:textColor="#3C8A66"/>

</androidx.constraintlayout.widget.ConstraintLayout>