<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Fragments.Calls_fragment">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                        android:text="Create Room"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/createroom"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_bias="0.497"
                        app:backgroundTint="#97EA4E" android:textStyle="bold" android:textSize="18sp"
                        android:layout_marginTop="224dp"/>
                <Button
                        android:text="Join Room"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/joinroom"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                        android:textSize="18sp" android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@+id/createroom"
                        app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.313"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>