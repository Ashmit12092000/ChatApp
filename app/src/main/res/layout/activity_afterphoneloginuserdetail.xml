<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.Afterphoneloginuserdetail" android:background="#FBF8F8">


    <View
            android:layout_width="405dp"
            android:layout_height="126dp" android:id="@+id/view4"
            android:background="@drawable/ic_sd"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.cardview.widget.CardView
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="45dp"
            app:layout_constraintEnd_toEndOf="parent" app:cardCornerRadius="10dp"
            android:id="@+id/cardView4" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="21dp" android:background="#4A3C3C">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="#FFFFFF">
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/name_layout" android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" app:boxCornerRadiusBottomEnd="5dp"
                    app:boxCornerRadiusBottomStart="5dp" app:boxCornerRadiusTopEnd="5dp"
                    app:boxCornerRadiusTopStart="5dp" android:visibility="visible">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:hint="Name" android:layout_marginTop="10dp" android:textColor="#2E2C2C"
                        android:id="@+id/Name" android:textStyle="bold"
                        android:inputType="textShortMessage|textPersonName|text|textEmailAddress"
                        android:visibility="visible"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/email_id_layout"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" app:boxCornerRadiusBottomEnd="5dp"
                    app:boxCornerRadiusBottomStart="5dp" app:boxCornerRadiusTopEnd="5dp"
                    app:boxCornerRadiusTopStart="5dp" android:visibility="visible">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:hint="Email" android:layout_marginTop="10dp" android:textColor="#2E2C2C"
                        android:id="@+id/Email" android:textStyle="bold" android:inputType="textEmailAddress"
                        android:visibility="visible"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/emai" android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" app:boxCornerRadiusBottomEnd="5dp"
                    app:boxCornerRadiusBottomStart="5dp" app:boxCornerRadiusTopEnd="5dp"
                    app:boxCornerRadiusTopStart="5dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:hint="Age" android:layout_marginTop="10dp" android:textColor="#2E2C2C"
                        android:id="@+id/Age" android:textStyle="bold" android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="327dp"
                    android:layout_height="wrap_content" android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp" android:layout_marginRight="5dp" app:boxCornerRadiusBottomEnd="5dp"
                    app:boxCornerRadiusBottomStart="5dp" app:boxCornerRadiusTopEnd="5dp"
                    app:boxCornerRadiusTopStart="5dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="315dp"
                        android:layout_height="match_parent"
                        android:hint="Gender" android:textStyle="bold" android:inputType="text"
                        android:background="#E8E6E6" android:id="@+id/gender"/>
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                    android:text="Next"
                    android:layout_width="241dp"
                    android:layout_height="62dp" android:id="@+id/next"
                    android:textStyle="bold"
                    android:textColor="#FFFEFE" android:layout_margin="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
            android:text="Profile Info"
            android:layout_width="160dp"
            android:layout_height="45dp" android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="140dp"
            android:layout_marginEnd="198dp"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.172" android:textStyle="bold" android:fontFamily="serif"
            android:textColor="#4C4C8F"
            android:layout_marginBottom="12dp" app:layout_constraintBottom_toTopOf="@+id/cardView4"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pbarafter"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="181dp" android:layout_marginEnd="182dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="@+id/textView4"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/user" android:id="@+id/profile_Pic"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/view4"
            android:layout_marginEnd="130dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="131dp"
            android:contentDescription="@string/todo" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toTopOf="@+id/textView4" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="Click Here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            app:layout_constraintEnd_toEndOf="@+id/profile_Pic"
            app:layout_constraintStart_toStartOf="@+id/profile_Pic"
            app:layout_constraintTop_toTopOf="@+id/profile_Pic" app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintHorizontal_bias="0.488" app:layout_constraintVertical_bias="0.783"/>
</androidx.constraintlayout.widget.ConstraintLayout>