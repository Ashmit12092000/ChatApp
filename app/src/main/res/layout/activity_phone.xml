<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.phoneActivity" android:background="#F1EEEE">
    <ImageView
            android:layout_width="140dp"
            android:layout_height="139dp" app:srcCompat="@drawable/chatss" android:id="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            app:layout_constraintTop_toBottomOf="@+id/cardView2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintHorizontal_bias="0.498"/>
    <TextView
            android:text="Verify Your mobile number"
            android:layout_width="245dp"
            android:layout_height="27dp" android:id="@+id/textView3"
            android:textStyle="bold"
            android:textSize="17sp" app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="@+id/imageView3" app:layout_constraintTop_toBottomOf="@+id/imageView3"
            android:layout_marginTop="32dp" app:layout_constraintHorizontal_bias="0.33" android:textColor="#916DA1"
            android:layout_marginRight="1dp" android:layout_marginEnd="1dp"/>
    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/card" android:id="@+id/cardView2"
            android:layout_marginRight="16dp" android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:cardCornerRadius="10dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginTop="40dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_margin="10dp">
            <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Mobile Number"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:id="@+id/mobile"/>
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                    android:text="Verify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/verifyb" android:layout_margin="10dp"
                    android:background="@drawable/shape" android:textColor="#FFFFFF"
                    android:textStyle="normal|bold" android:textSize="18sp"
            />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Button
            android:text="Sign Up using Email"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/createAccount"
            android:textStyle="bold"
            android:layout_marginEnd="95dp"
            android:layout_marginRight="95dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="94dp"
            android:layout_marginStart="94dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="28dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>